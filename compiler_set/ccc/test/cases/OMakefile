.PHONY: test clean

COMPILER = ../../src/main
ASSEMBLER = ../../../assembler/assembler
SIMULATOR = ../../../simulator/simulator
SIM_OPTION = -t
LINKER = ../../helper/linker.sh
C_HEADER = ../../helper/runner.c

FORMATTER = ruby -e "STDIN.bytes.map { |x| puts x.ord }"

TEST_TARGETS = $(ls *.c)
TEST_JOBS = $(replacesuffixes .c, .test, $(TEST_TARGETS))

test: $(TEST_JOBS)

%.test: %.gcc %.sim
	diff $*.gcc $*.sim
	touch $@

%.sim: %.bin $(SIMULATOR)
	$(SIMULATOR) $(SIM_OPTION) $< | $(FORMATTER) > $@

%.bin: %.s
	$(ASSEMBLER) $< $@

%.gcc: %.gcc.a
	$< | $(FORMATTER) > $@

%.gcc.a: %.gcc_c
	gcc -Wall -x c -o $@ $<

%.gcc_c: %.c
	cat $(C_HEADER) $< > $@

%.s: %.c $(COMPILER) $(LINKER)
	$(COMPILER) $< > /dev/null
	$(LINKER) $@

clean:
	rm -f *.s *.gcc *.sim *.gcc_c *.bin *.test *.gcc.a

.BUILD_SUCCESS:
	true

.BUILD_FAILURE:
	true
